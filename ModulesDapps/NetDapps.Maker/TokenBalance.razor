@inherits NetDapps.Maker.Components.TokenBalanceBase
@using Microsoft.AspNetCore.Components

<div class="form-group">
    <label for="accountAddresInput">Account Address</label>
    <input type="text" class="form-control" id="accountAddresInput" aria-describedby="accountAddressHelp" placeholder="Enter the account address" @bind="@AccountAddress" />
    <small id="accountAddressHelp" class="form-text text-muted">The account address</small>
</div>

<div class="form-group">
    <label for="accountBalance">Balance Maker:</label>
    <label id="accountBalance">@MkrBalance</label>
</div>

<div class="form-group">
    <label for="accountBalance">Balance Dai:</label>
    <label id="accountBalance">@DaiBalance</label>
</div>

<div class="form-group">
    <label for="accountBalance">Balance Peth:</label>
    <label id="accountBalance">@PethBalance</label>
</div>

<div class="form-group">
    <label for="accountBalance">Balance Weth:</label>
    <label id="accountBalance">@WethBalance</label>
</div>

<div class="form-group">
    <label for="accountBalance">Balance ETH:</label>
    <label id="accountBalance">@EthBalance</label>
</div>

<button type="submit" class="btn btn-primary" @onclick="@GetTokensBalance">Get Balance</button>
