@page "/"

@inherits IndexModel

    <div class="card" style="width:1200px">
        <h5 class="card-header">Nethereum Playground</h5>
        <div class="form-group row">
             <label for="selectCodeSample" class="col-sm-1 m-2">Code Sample:</label>
             <select id="selectCodeSample" class="form-control col-sm-7 m-2" onchange="@CodeSampleChanged">
                    @for (int i = 0; i < CodeSamples.Length; i++)
                    {
                        <option value="@i">@CodeSamples[i].Name</option>
                    }
                </select>
            <button class="btn btn-primary m-2" onclick="@Run">Run Code</button>
        </div>
        
        <div class="card-body">
            <div class="row">
                <MonacoEditor EditorModel="@editorModel" Width="1200" Height="600" />
            </div>
            <div class="row form-group">
                <label for="id=" txtOutput">Output</label>
                <textarea class="form-control" id="txtOutput" bind="@Output" rows="10"></textarea>
            </div>
        </div>
    </div>
   